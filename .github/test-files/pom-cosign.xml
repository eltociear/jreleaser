<project xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd"
         xmlns="http://maven.apache.org/POM/4.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
    <modelVersion>4.0.0</modelVersion>
    <groupId>org.jreleaser</groupId>
    <artifactId>jreleaser-test</artifactId>
    <version>0.0.0-SNAPSHOT</version>

    <name>jreleaser-test</name>
    <description>Release projects quickly and easily with JReleaser</description>
    <url>https://jreleaser.org</url>
    <inceptionYear>2020</inceptionYear>

    <properties>
        <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
        <java.version>11</java.version>
        <maven.compiler.source>${java.version}</maven.compiler.source>
        <maven.compiler.target>${java.version}</maven.compiler.target>
        <maven.compiler.release>${java.version}</maven.compiler.release>
    </properties>

    <licenses>
        <license>
            <name>Apache-2.0</name>
            <url>https://spdx.org/licenses/Apache-2.0.html</url>
            <distribution>repo</distribution>
        </license>
    </licenses>

    <developers>
        <developer>
            <id>aalmiray</id>
            <name>Andres Almiray</name>
        </developer>
    </developers>

    <scm>
        <connection>scm:git:https://github.com/jreleaser/jreleaser.git</connection>
        <developerConnection>scm:git:https://github.com/jreleaser/jreleaser.git</developerConnection>
        <url>https://github.com/jreleaser/jreleaser.git</url>
        <tag>HEAD</tag>
    </scm>

    <build>
        <plugins>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-compiler-plugin</artifactId>
                <version>3.8.1</version>
            </plugin>
            <plugin>
                <groupId>org.jreleaser</groupId>
                <artifactId>jreleaser-maven-plugin</artifactId>
                <version>0.0.0-SNAPSHOT</version>
                <configuration>
                    <jreleaser>
                        <environment>
                            <properties>
                                <jdkPathPrefix>plugins/jreleaser/build/jdks</jdkPathPrefix>
                                <jdkFilePrefix>zulu17.32.13-ca-jdk17.0.2</jdkFilePrefix>
                            </properties>
                        </environment>
                        <project>
                            <name>jreleaser</name>
                            <longDescription>
                                JReleaser is a release automation tool. Its goal is to simplify creating releases and
                                publishing artifacts to multiple package managers while providing customizable options.
                                JReleaser takes inputs from popular builds tools (Ant, Maven, Gradle) such as JAR files,
                                binary distributions (.zip, .tar), JLink images, or any other file that you‚Äôd like to
                                publish as a Git release on popular Git services such as GitHub, GitLab, or Gitea.
                                Distribution files may additionally be published to be consumed by popular package managers
                                such as Homebrew, Chocolatey, Snapcraft, or get ready to be launched via JBang. Releases
                                may be announced in a variety of channels such as Twitter, Zulip, SDKMAN!, and more.
                            </longDescription>
                            <links>
                                <faq>https://{{repoHost}}/{{repoOwner}}/{{repoName}}/discussions</faq>
                                <donation>https://opencollective.com/jreleaser</donation>
                            </links>
                            <stereotype>CLI</stereotype>
                            <screenshots>
                                <screenshot>
                                    <url>https://jreleaser.org/images/app-full-release-command.png</url>
                                    <caption>JReleaser in action</caption>
                                </screenshot>
                            </screenshots>
                            <icons>
                                <icon>
                                    <url>https://raw.githubusercontent.com/jreleaser/jreleaser/main/src/media/icon_256x256.png</url>
                                    <width>256</width>
                                    <height>256</height>
                                </icon>
                            </icons>
                            <tags>jreleaser,release,tool,java,git</tags>
                        </project>
                        <platform>
                            <replacements>
                                <aarch_64>aarch64</aarch_64>
                            </replacements>
                        </platform>
                        <release>
                            <github>
                                <overwrite>true</overwrite>
                                <sign>true</sign>
                                <discussionCategoryName>Announcements</discussionCategoryName>
                                <changelog>
                                    <formatted>ALWAYS</formatted>
                                    <preset>conventional-commits</preset>
                                    <format>- {{commitShortHash}} {{commitTitle}}</format>
                                    <contributors>
                                        <format>- {{contributorName}}{{#contributorUsernameAsLink}}
                                            ({{.}}){{/contributorUsernameAsLink}}
                                        </format>
                                    </contributors>
                                    <contentTemplate>src/jreleaser/changelog.tpl</contentTemplate>
                                    <labelers>
                                        <labeler>
                                            <label>i18n</label>
                                            <title>regex:^(?:i18n(?:\(.*\))?!?):\s.*</title>
                                            <order>120</order>
                                        </labeler>
                                        <labeler>
                                            <label>dependencies</label>
                                            <title>regex:^(?:deps(?:\(.*\))?!?):\s.*</title>
                                            <order>130</order>
                                        </labeler>
                                        <labeler>
                                            <label>allcontributors1</label>
                                            <title>regex:^docs: update .all-contributorsrc.*</title>
                                            <order>-1</order>
                                        </labeler>
                                        <labeler>
                                            <label>allcontributors2</label>
                                            <title>regex:^docs: update CONTRIBUTORS.md.*</title>
                                            <order>-2</order>
                                        </labeler>
                                    </labelers>
                                    <categories>
                                        <category>
                                            <title>üåê Translation</title>
                                            <key>i18n</key>
                                            <order>70</order>
                                            <labels>i18n</labels>
                                        </category>
                                        <category>
                                            <title>‚öôÔ∏è  Dependencies</title>
                                            <key>dependencies</key>
                                            <order>80</order>
                                            <labels>dependencies</labels>
                                        </category>
                                        <category>
                                            <title>allcontributors</title>
                                            <order>59</order>
                                            <labels>allcontributors1,allcontributors2</labels>
                                        </category>
                                    </categories>
                                    <hide>
                                        <categories>merge,allcontributors</categories>
                                        <contributors>GitHub,allcontributors</contributors>
                                    </hide>
                                    <replacers>
                                        <replacer>
                                            <search>i18n:</search>
                                        </replacer>
                                        <replacer>
                                            <search>deps:</search>
                                        </replacer>
                                    </replacers>
                                </changelog>
                            </github>
                        </release>
                        <signing>
                            <active>ALWAYS</active>
                            <armored>true</armored>
                            <files>false</files>
                            <mode>COSIGN</mode>
                            <cosign>
                                <version>1.11.1</version>
                            </cosign>
                        </signing>
                        <checksum>
                            <files>false</files>
                        </checksum>
                        <assemble>
                            <archive>
                                <jreleaser-archive>
                                    <active>ALWAYS</active>
                                    <attachPlatform>true</attachPlatform>
                                    <formats>ZIP,TAR,TAR_BZ2,TAR_GZ,TAR_XZ,TBZ2,TGZ,TXZ</formats>
                                    <fileSets>
                                        <fileSet>
                                            <input>.</input>
                                            <includes>
                                                <include>VERSION</include>
                                            </includes>
                                        </fileSet>
                                    </fileSets>
                                </jreleaser-archive>
                            </archive>
                            <jlink>
                                <jreleaser-standalone>
                                    <active>ALWAYS</active>
                                    <java>
                                        <mainClass>org.jreleaser.cli.Main</mainClass>
                                    </java>
                                    <imageName>{{distributionName}}-{{projectEffectiveVersion}}</imageName>
                                    <executable>jreleaser</executable>
                                    <jdeps>
                                        <multiRelease>base</multiRelease>
                                        <ignoreMissingDeps>true</ignoreMissingDeps>
                                    </jdeps>
                                    <additionalModuleNames>
                                        <additionalModuleName>java.security.sasl</additionalModuleName>
                                        <additionalModuleName>java.security.jgss</additionalModuleName>
                                        <additionalModuleName>jdk.crypto.cryptoki</additionalModuleName>
                                        <additionalModuleName>jdk.crypto.ec</additionalModuleName>
                                        <additionalModuleName>jdk.localedata</additionalModuleName>
                                        <additionalModuleName>jdk.net</additionalModuleName>
                                        <additionalModuleName>jdk.security.auth</additionalModuleName>
                                        <additionalModuleName>jdk.security.jgss</additionalModuleName>
                                    </additionalModuleNames>
                                    <targetJdks>
                                        <targetJdk>
                                            <path>
                                                {{jdkPathPrefix}}/zulu17Osx/{{jdkFilePrefix}}-macosx_x64/zulu-17.jdk/Contents/Home
                                            </path>
                                            <platform>osx-x86_64</platform>
                                        </targetJdk>
                                        <targetJdk>
                                            <path>
                                                {{jdkPathPrefix}}/zulu17OsxArm/{{jdkFilePrefix}}-macosx_aarch64/zulu-17.jdk/Contents/Home
                                            </path>
                                            <platform>osx-aarch_64</platform>
                                        </targetJdk>
                                        <targetJdk>
                                            <path>{{jdkPathPrefix}}/zulu17Linux/{{jdkFilePrefix}}-linux_x64</path>
                                            <platform>linux-x86_64</platform>
                                        </targetJdk>
                                        <targetJdk>
                                            <path>{{jdkPathPrefix}}/zulu17LinuxArm/{{jdkFilePrefix}}-linux_aarch64
                                            </path>
                                            <platform>linux-aarch_64</platform>
                                        </targetJdk>
                                        <targetJdk>
                                            <path>{{jdkPathPrefix}}/zulu17LinuxMusl/{{jdkFilePrefix}}-linux_musl_x64
                                            </path>
                                            <platform>linux_musl-x86_64</platform>
                                        </targetJdk>
                                        <targetJdk>
                                            <path>
                                                {{jdkPathPrefix}}/zulu17LinuxMuslArm/{{jdkFilePrefix}}-linux_musl_aarch64
                                            </path>
                                            <platform>linux_musl-aarch_64</platform>
                                        </targetJdk>
                                        <targetJdk>
                                            <path>{{jdkPathPrefix}}/zulu17Windows/{{jdkFilePrefix}}-win_x64</path>
                                            <platform>windows-x86_64</platform>
                                        </targetJdk>
                                        <targetJdk>
                                            <path>{{jdkPathPrefix}}/zulu17WindowsArm/{{jdkFilePrefix}}-win_aarch64
                                            </path>
                                            <platform>windows-aarch_64</platform>
                                        </targetJdk>
                                    </targetJdks>
                                    <mainJar>
                                        <path>plugins/jreleaser/build/libs/jreleaser-{{projectVersion}}.jar</path>
                                    </mainJar>
                                    <jars>
                                        <jar>
                                            <pattern>plugins/jreleaser/build/dependencies/flat/*.jar</pattern>
                                        </jar>
                                    </jars>
                                </jreleaser-standalone>
                            </jlink>
                        </assemble>
                        <distributions>
                            <jreleaser>
                                <java>
                                    <mainClass>org.jreleaser.cli.Main</mainClass>
                                </java>
                                <flatpak>
                                    <active>ALWAYS</active>
                                    <componentId>org.jreleaser.cli</componentId>
                                    <developerName>JReleaser</developerName>
                                    <runtime>FREEDESKTOP</runtime>
                                    <runtimeVersion>21.08</runtimeVersion>
                                    <finishArgs>
                                        <finishArg>--share=network</finishArg>
                                        <finishArg>--filesystem=host</finishArg>
                                    </finishArgs>
                                    <categories>Developer Tools</categories>
                                    <repository>
                                        <active>RELEASE</active>
                                        <owner>flathub</owner>
                                        <name>org.jreleaser.cli</name>
                                    </repository>
                                </flatpak>
                                <chocolatey>
                                    <active>ALWAYS</active>
                                    <remoteBuild>true</remoteBuild>
                                    <title>JReleaser</title>
                                    <iconUrl>
                                        https://rawcdn.githack.com/jreleaser/jreleaser/0934fa1fa3f0bd09c0c8c39fbdeb5df2ce507457/src/media/icon_128x128.png
                                    </iconUrl>
                                    <bucket>
                                        <active>RELEASE</active>
                                    </bucket>
                                </chocolatey>
                                <jbang>
                                    <active>ALWAYS</active>
                                </jbang>
                                <macports>
                                    <active>ALWAYS</active>
                                    <categories>
                                        <category>devel</category>
                                        <category>java</category>
                                    </categories>
                                    <maintainers>@aalmiray</maintainers>
                                    <repository>
                                        <active>RELEASE</active>
                                        <name>jreleaser-macports</name>
                                    </repository>
                                </macports>
                                <scoop>
                                    <active>ALWAYS</active>
                                    <bucket>
                                        <active>RELEASE</active>
                                    </bucket>
                                </scoop>
                                <sdkman>
                                    <active>ALWAYS</active>
                                </sdkman>
                                <snap>
                                    <active>ALWAYS</active>
                                    <remoteBuild>true</remoteBuild>
                                    <base>core18</base>
                                    <architectures>
                                        <architecture>
                                            <buildOn>amd64,arm64</buildOn>
                                        </architecture>
                                    </architectures>
                                    <plugs>
                                        <plug>
                                            <name>dot-config-files</name>
                                            <attributes>
                                                <interface>personal-files</interface>
                                            </attributes>
                                            <writes>
                                                <write>$HOME/.jreleaser</write>
                                            </writes>
                                            <reads>
                                                <read>$HOME/.gnupg</read>
                                                <read>$HOME/.gitconfig</read>
                                                <read>$HOME/.config/jgit</read>
                                            </reads>
                                        </plug>
                                    </plugs>
                                    <localPlugs>network,home,dot-config-files</localPlugs>
                                </snap>
                                <spec>
                                    <active>ALWAYS</active>
                                    <repository>
                                        <active>RELEASE</active>
                                        <name>jreleaser-copr</name>
                                    </repository>
                                </spec>
                                <artifacts>
                                    <artifact>
                                        <path>plugins/{{distributionName}}/build/distributions/{{distributionName}}-{{projectVersion}}.zip</path>
                                        <transform>{{distributionName}}/{{distributionName}}-{{projectEffectiveVersion}}.zip</transform>
                                        <extraProperties>
                                            <skipSpec>true</skipSpec>
                                        </extraProperties>
                                    </artifact>
                                    <artifact>
                                        <path>plugins/{{distributionName}}/build/distributions/{{distributionName}}-{{projectVersion}}.tar</path>
                                        <transform>{{distributionName}}/{{distributionName}}-{{projectEffectiveVersion}}.tar</transform>
                                        <extraProperties>
                                            <skipFlatpak>true</skipFlatpak>
                                        </extraProperties>
                                    </artifact>
                                </artifacts>
                            </jreleaser>
                            <jreleaser-ant-tasks>
                                <artifacts>
                                    <artifact>
                                        <path>plugins/{{distributionName}}/build/distributions/{{distributionName}}-{{projectVersion}}.zip</path>
                                        <transform>{{distributionName}}/{{distributionName}}-{{projectEffectiveVersion}}.zip</transform>
                                    </artifact>
                                </artifacts>
                            </jreleaser-ant-tasks>
                            <jreleaser-tool-provider>
                                <type>SINGLE_JAR</type>
                                <artifacts>
                                    <artifact>
                                        <path>plugins/{{distributionName}}/build/libs/{{distributionName}}-{{projectVersion}}.jar</path>
                                        <transform>{{distributionName}}/{{distributionName}}-{{projectEffectiveVersion}}.jar</transform>
                                    </artifact>
                                </artifacts>
                            </jreleaser-tool-provider>
                            <jreleaser-standalone>
                                <appImage>
                                    <active>ALWAYS</active>
                                    <componentId>org.jreleaser.cli</componentId>
                                    <developerName>JReleaser</developerName>
                                    <categories>Development</categories>
                                    <repository>
                                        <active>RELEASE</active>
                                        <name>jreleaser-appimage</name>
                                    </repository>
                                </appImage>
                                <brew>
                                    <active>ALWAYS</active>
                                    <formulaName>jreleaser</formulaName>
                                    <multiPlatform>true</multiPlatform>
                                    <tap>
                                        <active>RELEASE</active>
                                        <commitMessage>jreleaser {{tagName}}</commitMessage>
                                    </tap>
                                </brew>
                                <docker>
                                    <active>ALWAYS</active>
                                    <repository>
                                        <active>RELEASE</active>
                                        <commitMessage>jreleaser {{tagName}}</commitMessage>
                                    </repository>
                                    <registries>
                                        <registry>
                                            <serverName>DEFAULT</serverName>
                                            <username>jreleaser</username>
                                        </registry>
                                    </registries>
                                    <labels>
                                        <org.opencontainers.image.title>jreleaser</org.opencontainers.image.title>
                                    </labels>
                                    <postCommands>
                                        <postCommand>VOLUME /workspace</postCommand>
                                    </postCommands>
                                    <specs>
                                        <slim>
                                            <imageNames>
                                                <imageName>jreleaser/jreleaser-{{dockerSpecName}}:{{tagName}}
                                                </imageName>
                                                <imageName>jreleaser/jreleaser-{{dockerSpecName}}:latest</imageName>
                                            </imageNames>
                                            <matchers>
                                                <platform>linux-x86_64</platform>
                                            </matchers>
                                            <preCommands>
                                                <preCommand>ARG DEBIAN_FRONTEND=noninteractive</preCommand>
                                                <preCommand>ENV TZ=Europe/Zurich</preCommand>
                                                <preCommand>RUN apt-get update &amp;&amp; apt-get install -y unzip binutils fakeroot rpm</preCommand>
                                            </preCommands>
                                        </slim>
                                        <alpine>
                                            <imageNames>
                                                <imageName>jreleaser/jreleaser-{{dockerSpecName}}:{{tagName}}
                                                </imageName>
                                                <imageName>jreleaser/jreleaser-{{dockerSpecName}}:latest</imageName>
                                            </imageNames>
                                            <matchers>
                                                <platform>linux_musl-x86_64</platform>
                                            </matchers>
                                            <preCommands>
                                                <preCommand>RUN apk add unzip binutils fakeroot rpm bash</preCommand>
                                            </preCommands>
                                        </alpine>
                                    </specs>
                                </docker>
                            </jreleaser-standalone>
                        </distributions>
                        <files>
                            <artifacts>
                                <artifact>
                                    <path>VERSION</path>
                                </artifact>
                            </artifacts>
                        </files>
                        <upload>
                            <s3>
                                <jreleaser>
                                    <active>ALWAYS</active>
                                </jreleaser>
                            </s3>
                        </upload>
                    </jreleaser>
                </configuration>
            </plugin>
        </plugins>
    </build>

    <profiles>
        <profile>
            <id>os.mac</id>
            <activation>
                <os>
                    <family>mac</family>
                </os>
            </activation>
            <properties>
                <jreleaser.excluded.packagers>docker</jreleaser.excluded.packagers>
            </properties>
        </profile>
    </profiles>
</project>
